<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <template id="assets_backend" name="document_existing add js" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/document_existing/static/src/js/url.js"></script>
            </xpath>
        </template>

        <record model='ir.actions.act_window' id='action_ir_attachment_add_existing_documents'>
            <field name='name'>Add existing documents</field>
            <field name='res_model'>ir.attachment.add_existing_documents</field>
            <field name='type'>ir.actions.act_window</field>
            <field name='target'>new</field>
            <field name='view_type'>form</field>
            <field name='view_mode'>form</field>
        </record>

        <record model="ir.ui.view" id="view_ir_attachment_document_existing_form">
            <field name="name">ir.attachment.add_existing_documents.form</field>
            <field name="model">ir.attachment.add_existing_documents</field>
            <field name="arch" type="xml">
                <form string="Add existing documents" version="8.0">
                    <h1>
                    <label string="Filters "/>
                    </h1>
                    <group>
                        <field name="res_model" string="Res model"/>
                        <field name="type" string="Type"/>
                    </group>
                    <h1>
                    <label string="Choose document "/>
                    </h1>
                    <group>
                        <field name="documents_existing" string="Documents existing" default_order='create_date' select="True"/>                  
                    </group>
                    <footer>
                        <button name="action_add_existing_document" string="Add" class="oe_highlight" type="object" />
                        or
                        <button special="cancel" string="Cancel" class="oe_link" />
                    </footer>
                </form>
            </field>
        </record>

    </data>
</openerp>
